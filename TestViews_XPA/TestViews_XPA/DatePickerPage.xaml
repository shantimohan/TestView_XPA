<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestViews_XPA.DatePickerPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Date Picker View"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

            <DatePicker x:Name="dpMyDate"
                        AutomationId="dpMyDate"
                        Format="ddd d MMM yyyy"
                        WidthRequest="150"
                        DateSelected="dpMyDate_DateSelected"
                        HorizontalOptions="Center"
                        VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>