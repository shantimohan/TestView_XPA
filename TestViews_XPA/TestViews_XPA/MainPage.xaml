<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TestViews_XPA"
             x:Class="TestViews_XPA.MainPage"
             Title="Test XF Views">

    <StackLayout Orientation="Vertical"
                 Margin="0,20,0,0">
        <Label Text="Welcome to ESM Smart Solutions!"
               FontSize="Large"
               FontAttributes="Bold"
               VerticalOptions="Center"
               HorizontalOptions="Center" />

        <StackLayout Orientation="Horizontal">
            <Button x:Name="btnActivityIndicator"
                    AutomationId="btnActivityIndicator"
                    Clicked="btnActivityIndicator_Clicked"
                    Text="Test Activity Indicator"/>

            <Button x:Name="btnBoxView"
                    AutomationId="btnBoxView"
                    Clicked="btnBoxView_Clicked"
                    Text="Test Box View"/>

        </StackLayout>

    </StackLayout>

</ContentPage>