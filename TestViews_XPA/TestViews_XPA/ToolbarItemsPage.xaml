<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestViews_XPA.ToolbarItemsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem x:Name="tbiAccept"
                     AutomationId="tbiAccept"
                     Text="Accept"
                     Clicked="tbiAccept_Clicked"
                     Icon="accept.png" />

        <ToolbarItem x:Name="tbiCancel"
                     AutomationId="tbiCancel"
                     Text="Cancel"
                     Clicked="tbiCancel_Clicked"
                     Icon="cancel.png" />
    </ContentPage.ToolbarItems>
  
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Toolbar Items"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

            <Label x:Name="lblResult"
                   AutomationId="lblResult"
                   Text="Accept or Reject"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>