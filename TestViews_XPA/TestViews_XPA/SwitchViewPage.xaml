<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TestViews_XPA.SwitchViewPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Switch View"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center" />

            <Switch x:Name="swiMySwitch"
                    AutomationId="swiMySwitch"
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    Toggled="swiMySwitch_Toggled" />

            <Label x:Name="lblSwitchStatus"
                   AutomationId="lblSwitchStatus"
                   Text="Switch is set to False"
                   FontSize="Large"
                   HorizontalOptions="Center"
                   VerticalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>